.side-bar__header
  .side-bar__header__box
    %p.side-bar__header__box__user-name 
      = current_user.name
    %ul.side-bar__header__box__menue-list
      %li.side-bar__header__box__menue-list__new-group
        = link_to new_group_path do
          %i.fas.fa-edit
      %li.side-bar__header__box__menue-list__edit-user
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')

.side-bar__groups-list
  - current_user.groups.each do |group|
    .group
      = link_to group_messages_path(group) do
        .group__name
          = group.name
        .group__message
          = group.show_last_message